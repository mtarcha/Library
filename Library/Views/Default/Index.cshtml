@model IEnumerable<Library.ViewModels.BookViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<nav class="navbar navbar-expand navbar-dark bg-dark align-items-center">
    <a class="navbar-brand text-success font-weight-bold" style="font-size: 45px">Home Library</a>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            <a class="nav-item nav-link" href="#">Favourite Books</a>
            <a class="nav-item nav-link" href="#">Favourite Reviewers</a>
        </div>
    }
    <div class="d-flex flex-row-reverse flex-fill">
        @if (User.Identity.IsAuthenticated)
        {
            <form method="post" class="m-2 float-right d-flex justify-content-center" asp-controller="Account" asp-action="LogOff">
                <input class="btn btn-outline-success" type="submit" value="Log Off" />
            </form>

            <div class="m-2 align-self-center text-success">@User.Identity.Name</div>
        }
        else
        {
            <a class="m-2 btn btn-outline-success my-2 my-sm-0 float-lg-right" asp-controller="Account" asp-action="Login">Login</a>
            <a class="m-2 btn btn-outline-success my-2 my-sm-0 float-lg-right" asp-controller="Account" asp-action="Register">Register</a>
        }
    </div>
</nav>

<form class="form-inline m-2">
    <input class="form-control form-control-sm w-100" type="text" placeholder="Search"
           aria-label="Search">
</form>

<div class="card-deck m-4 jfy-c flex-fill">
    @foreach (var book in Model)
    {
        <div class="card cw-20">
            <img src="img/Book.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Name: @book.Name</h5>
                <p class="card-text">Rate: @book.Rate</p>
                <p class="card-text">Date: @book.Date</p>
                @foreach (var author in book.Authors)
                {
                    <p class="card-text">Author: @author.FirstName</p>
                }
                <p class="card-text">
                    Summary: <small class="text-muted">@book.Summary</small>
                </p>
            </div>
        </div>
    }
</div>


